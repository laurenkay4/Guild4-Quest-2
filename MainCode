//Functions ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

void FamilyNames(int n) {
    int numFamMem = n;
    string name;
    vector<string> famNames;
    
    cout << "Please enter the names for the family members." << endl;
    
    for (int i = 1; i <= numFamMem; i++){
        cout << "Name " << i << ": ";
        cin >> name;
        famNames.push_back(name);
    }
}


void IntroDisplay(){ // Complete 
    
    cout << "***** The N vs NP Trail *****" << endl;
    
    cout << "    ________  _________  _________                         " << endl;
	cout << "   /        /          /       /  |                        " << endl;
	cout << "  /         |          |      /   |                        " << endl;
	cout << " |          |          |     |    |                        " << endl;
	cout << " |          |          |     |    |                        " << endl;
	cout << " |          |          |     |    |                        " << endl;
	cout << " |          |          |     |    |         ___            " << endl;
	cout << " |          |          |     |    |        |  ~|           " << endl;
	cout << " ----------------------------------___     |~  |  _        " << endl;
	cout << " |                                |       ~|  ~|_| |~      " << endl;
	cout << " |_____******__________******_____|     _  |~   ___|       " << endl;
	cout << "     **      **      **      **        |~|_|   |~          " << endl;
	cout << "    *          *    *          *      ~|___  ~ |           " << endl;
	cout << "    *          *    *          *           |  ~|           " << endl;
	cout << "     **      **      **      **            |~  |~          " << endl;
	cout << "       ******          ******              |   |           " << endl;
	cout << endl;
	
    cout << "HOWDY YALL! Welcome to the wild west of the N vs NP Trail. In this game your family (guild) must work"<< endl;
    cout << "as a group to arrive safely to the end of the trail in North Portland, Oregon. " << endl;
    
    cout << "\nYou will begin your journey in Nowhere, Missouri. Along the trail will be towns where " << endl;
    cout << "you will ask townspeople for the directions to Oregon, but be wary, not all townspeople will give you the correct directions." << endl;
  
    cout << "\nTo continue on the trail, you must correctly identify if the townspeople's answers are true or false." << endl;
    cout << "If you fail to correctly identify truth from lies you will put someone in your family in grave danger." << endl;
    cout << "\nGood Luck Travelers\n" << endl;
    
}

void FailEndScreen(){
    cout << "~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~" << endl;
    cout << "\nFailed: everyone in your family has died before reaching Oregon"
}

void SuccessEndScreen(){
    cout << "~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~" << endl;
    cout << "\nCongratulations! You successfully reached Nort Portland Oregon."
}	
