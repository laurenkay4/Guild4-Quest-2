#include <iostream>
#include <vector>
#include <string>
#include <random>
using namespace std;

int Death(vector<string>& famNames, int numOfMembers); //complete, just needs to be placed in the right spot
void IntroDisplay();      //complete
vector<string> FamilyNames(int n);  //complete

int main() {
    IntroDisplay();
   
    int numOfMembers = 0;
    cout << "Please enter the number of family members (guild members): ";
    cin >> numOfMembers;
   
    vector<string> famNames = FamilyNames(numOfMembers);
    Death(famNames, numOfMembers);
    return 0;
}

vector<string> FamilyNames(int n) {
    int numFamMem = n;
    string name;
    vector<string> famNames;
   
    cout << "Please enter the names for the family members." << endl;
   
    for (int i = 1; i <= numFamMem; i++){
        cout << "Name " << i << ": ";
        cin >> name;
        famNames.push_back(name);
    }
   
    return famNames;
}

